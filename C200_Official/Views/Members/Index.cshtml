@model List<Member>

@{
    ViewData["Title"] = "Index";
}



<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="ExportToExcel">Export Members to Excel</a>
    <a asp-action="FromExcelInsertToDB">Excel Insert</a>

    <table class="table">
        <thead>
            <tr>

                @* <th>Member List</th>*@
                <td>
                    Username
                </td>
                <td>
                    FirstName
                </td>
                <td>
                    LastName
                </td>
                <td>
                    Email
                </td>
                <td>
                    Role
                </td>
                <td>
                    LastLogin
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastLogin)
                    </td>
                    <td>
                        <a asp-controller="Members" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a> |    @*///cannot do like registration because it is based on member ID*@
                        <a asp-controller="Members" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-controller="Members" asp-action="Index">
        <p>
            Title: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
